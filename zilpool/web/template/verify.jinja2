{% extends "base.jinja2" %}
{% block body %}
{{ super() }}
<section class="text-white text-center">
  <div class="container">
    <div class="row mx-auto mt-5">
      {% if verified %}
      <div class="col-12 alert alert-success">verify passed</div>
      {% else %}
      <div class="col-12 alert alert-danger">verify failed or expired</div>
      {% endif %}
      <div class="col-12 alert alert-info fixed-font">
      {% for line in message.splitlines() %}
        {{line}}<br>
      {% endfor %}
      </div>
    </div>
  </div>
</section>
{% endblock %}
